@model List<Sistema_de_contabilidad_Open_Source.Models.ViewModels.ListtipoMonedasViewModel>
@{
    ViewBag.Title = "Tipo de monedas";
}

<h2>@ViewBag.Title</h2>


<div class="row" style="text-align: right; padding:5px;">
    <a href="~/tipoMonedas/Nuevo" class="btn btn-primary"> Nuevo </a>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">

            <tr>
                <th>Descripcion</th>
                <th>Tasa de cambio</th>
                <th>Estado</th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.descripcion</td>
                    <td>RD$ @oElemento.tasaCambiaria </td>
                    @* Estado *@
                    @if (@oElemento.estado == true)
                    {
                        <td style="color:green"> Activado </td>
                    }
                    else
                    {
                        <td style="color:red"> Desactivado </td>
                    }
                    <td>
                        <a href="/tipoMonedas/Editar/@oElemento.ID" class="btn btn-warning"> Editar</a>
                        <a href="/tipoMonedas/Eliminar/@oElemento.ID" class="btn btn-danger"> Eliminar</a>
                    </td>
                </tr>
            }
        </table>

    </div>

</div>